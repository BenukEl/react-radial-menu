{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",     
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "declaration": false,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["src"],                 
  "exclude": [
    "node_modules",
    "dist",
    ".storybook",
    "src/stories",
    "vite.config.ts"
  ]
}
